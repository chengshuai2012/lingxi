<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_bg">
    <include layout="@layout/lock_head_main" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_one"
        android:visibility="visible"
        android:layout_marginBottom="150px"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="50px"
            android:layout_marginRight="150px"
            android:layout_marginLeft="150px"
            android:visibility="visible"
            android:background="@drawable/button_bt_bg"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:text="B20"
                android:textSize="40sp"
                android:textColor="#fff"
                android:id="@+id/text_num1"/>
            <View
                android:layout_width="5dp"
                android:layout_height="150px"
                android:layout_gravity="center"
                android:background="#fff"/>
            <TextView
                android:id="@+id/text_num2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:text="空闲 09"
                android:textSize="40sp"
                android:textColor="#fff"/>
            <View
                android:layout_width="5dp"
                android:layout_height="150px"
                android:layout_gravity="center"
                android:background="#fff"/>
            <TextView
                android:id="@+id/text_num3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:text="已用01"
                android:textSize="40sp"
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100px"
            >
            <Button
                android:id="@+id/main_bt_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/main_page_1"
                android:layout_marginLeft="100px" />
            <Button
                android:id="@+id/main_bt_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/main_page_2"
                android:layout_marginLeft="100px"/>
            <Button
                android:id="@+id/main_bt_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/main_page_3"
                android:layout_marginLeft="100px"
                android:layout_marginRight="100px"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/adminmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_01"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:digits="0123456789"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/clean_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="清柜"
                android:textSize="@dimen/text_size_30sp" />

            <Button
                android:id="@+id/clean_all"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除所有柜子"
                android:textSize="@dimen/text_size_30sp"
                android:textColor="@color/red"/>

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="返回"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px">

            <EditText
                android:id="@+id/openlock_one"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:textColor="@color/black"
                android:digits="0123456789"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/openlock_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="打开柜子"
                android:textSize="@dimen/text_size_30sp" />

            <Button
                android:id="@+id/openlock_all"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开所有柜"
                android:textColor="@color/colorbtn"
                android:textSize="@dimen/text_size_30sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/cabinet_used"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:textColor="@color/black"
                android:digits="0123456789"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/record_button"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用记录"
                android:textSize="@dimen/text_size_30sp" />

            <Button
                android:id="@+id/lock_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="查看锁板信息"
                android:textSize="@dimen/text_size_30sp" />
        </LinearLayout>
        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:textColor="@color/white"></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:text="调试区："
            android:textSize="@dimen/text_size_40sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="锁板号："
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_25sp" />

            <EditText
                android:id="@+id/edit_02"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                android:digits="0123456789"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="锁号："
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_25sp" />

            <EditText
                android:id="@+id/edit_03"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:textColor="@color/black"
                android:digits="0123456789"
                android:textCursorDrawable="@null"
                android:textSize="30sp" />

            <Button
                android:id="@+id/openlock_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="打开锁"
                android:textSize="@dimen/text_size_30sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px">
            <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="密码修改"
                android:textSize="30sp"
            android:id="@+id/chang_pdw"/>
            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="设备id"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_30sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>