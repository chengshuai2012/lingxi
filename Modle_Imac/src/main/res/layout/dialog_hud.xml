<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_progress_hud"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <ProgressBar
            android:id="@+id/DialogHud_Progress"
            android:layout_width="50px"
            android:layout_height="50px"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/loading_progress"
            android:indeterminateOnly="true"
            android:indeterminateDuration="800"
            android:visibility="visible" />
        <ImageView
            android:id="@+id/DialogHud_Icon"
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@drawable/icon_success"
            android:contentDescription="@drawable/icon_success"
            android:visibility="gone" />
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="@string/loading"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_25sp" />
    </LinearLayout>

</LinearLayout>
