<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/index_page_bg">
    <include layout="@layout/layout_head_page"></include>
   <View
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="7"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="82dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="40px"
                        android:layout_marginRight="40px"
                        android:gravity="center_vertical"
                        android:id="@+id/home_back_bt"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50px"
                            android:layout_height="50px"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/icon_round_left"
                            android:gravity="center_vertical" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/back"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_30sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="250px"
                        android:layout_height="54dp"
                        android:layout_gravity="center"
                        android:background="@drawable/sign_code"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="50px"
                            android:layout_height="50px"
                            android:layout_gravity="center"
                            android:background="@drawable/main_icon_finger"
                            android:gravity="center" />
                        <TextView
                            android:id="@+id/text_tile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_30sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40px"
                    android:gravity="center">
                    <TableRow android:gravity="center">
                        <TextView
                            android:id="@+id/bind_one_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/colorText"
                            android:textSize="25sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/bind_two_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/edittv"
                            android:text=""
                            android:textSize="25sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/bind_three_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/edittv"
                            android:gravity="center"
                            android:text=""
                            android:textSize="25sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/bind_four_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/edittv"
                            android:text=""
                            android:textSize="25sp"
                            android:textStyle="bold" />
                    </TableRow>
                </TableLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:layout_marginRight="50px"
                    android:layout_marginTop="50px"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/bind_one_Cimg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/flow_circle_pressed" />
                        <View
                            android:id="@+id/bind_one_line"
                            android:layout_width="wrap_content"
                            android:layout_height="5px"
                            android:layout_marginLeft="10px"
                            android:background="@color/colorText"
                            android:gravity="center" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/bind_two_Cimg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/flow_circle" />
                        <View
                            android:id="@+id/bind_two_line"
                            android:layout_width="wrap_content"
                            android:layout_height="5px"
                            android:layout_marginLeft="10px"
                            android:background="@color/edittv"
                            android:gravity="center" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/bind_three_Cimg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/flow_circle" />
                        <View
                            android:id="@+id/bind_three_line"
                            android:layout_width="wrap_content"
                            android:layout_height="5px"
                            android:layout_marginLeft="10px"
                            android:background="@color/edittv"
                            android:gravity="center" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/bind_four_Cimg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/flow_circle" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_main_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90px"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/main_botton"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/mian_text_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/put_mapfinger"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="30px"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                <com.link.cloud.view.NoScrollViewPager
                android:id="@+id/bing_main_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                />
            </LinearLayout>
            </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            ></View>
    </LinearLayout>
</LinearLayout>
