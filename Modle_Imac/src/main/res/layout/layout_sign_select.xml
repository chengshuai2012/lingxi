<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/index_main_bg">
    <include layout="@layout/layout_head_page"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="150px"
        android:layout_marginRight="150px"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="3">
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择您的签到方式"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >
            <LinearLayout
                android:id="@+id/sign_finger_page"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sign_finger"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="50px"
                    android:layout_height="50px"
                   />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="指静脉签到"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="30sp"
                />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >

            <LinearLayout
                android:id="@+id/sign_code_page"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sign_code"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="50px"
                    android:layout_height="50px"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="二维码签到"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/sign_face_page"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sign_code"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                   />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:text="二维码签到"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
</LinearLayout>