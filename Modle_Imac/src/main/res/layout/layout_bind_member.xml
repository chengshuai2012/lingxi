<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_two"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clipChildren="false"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:gravity="center">

            <LinearLayout
                android:layout_width="501px"
                android:layout_height="304px"
                android:layout_gravity="center"
                android:layout_marginTop="90px"
                android:background="@drawable/card_member"
                android:orientation="vertical"
                android:id="@+id/one_card"
              >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35px"
                            android:layout_marginTop="35px">

                            <TextView
                                android:id="@+id/bind_member_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="梧桐树"
                                android:textColor="@color/white"
                                android:textSize="30sp" />

                            <TextView
                                android:id="@+id/bind_member_sex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30px"
                                android:textColor="@color/white"
                                android:textSize="30sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/bind_member_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35px"
                            android:layout_marginTop="5px"
                            android:text="15888888888"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/userType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                    </LinearLayout>

                </LinearLayout>
                <TextView

                    android:layout_marginLeft="30px"
                    android:layout_marginTop="50px"
                    android:id="@+id/card_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:paddingRight="50dp"
                    android:textColor="@color/white"
                    android:textSize="30sp" />
                <TextView
                    android:id="@+id/card_value"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="5px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:paddingRight="50dp"
                    android:textColor="@color/white"
                    android:textSize="30sp" />
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20px"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/bind_member_cardnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="45sp" />
                </LinearLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35px"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/bind_member_cardtype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="25px"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="25px">

                            <TextView
                                android:id="@+id/bind_member_begintime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/bind_member_endtime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_card"
                android:layout_width="504dp"
                android:visibility="gone"
                android:layout_height="334dp">

            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mActivity_review"
                android:layout_width="501dp"
                android:visibility="gone"
                android:layout_height="344dp">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="150px"
            android:gravity="center">

            <Button
                android:id="@+id/bind_member_next"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:background="@drawable/button_bt_bg"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/colorbutton"
                android:textSize="@dimen/text_size_40sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/ll_lesson_count"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/confirm_lesson_count"
                    android:textColor="@color/colorbutton"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_40sp"
                    />
<ImageView
    android:layout_width="70dp"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:id="@+id/minus_circle"
    android:src="@drawable/minus_circle"
    />
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textColor="@color/colorbutton"
                    android:gravity="center"
                    android:id="@+id/lesson_count"
                    android:textSize="@dimen/text_size_40sp"
                    />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/plus_circle"
                    android:id="@+id/plus_circle"
                    />
                <Button
                    android:id="@+id/lesson_confirm_next"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/button_bt_bg"
                    android:gravity="center"
                    android:text="@string/confirm"
                    android:textColor="@color/colorbutton"
                    android:textSize="@dimen/text_size_40sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80px"
        android:background="@drawable/main_botton"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="请按图提示操作"
            android:textColor="@color/white"
            android:textSize="30px"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_three"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/qrcode"
            android:layout_width="1dp"
            android:layout_height="1dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/putfinger" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lessonLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1">-->
            <Button
                android:id="@+id/up_lesson"
                android:layout_width="90px"
                android:layout_height="160px"
                android:layout_gravity="center_vertical"
                android:background="@drawable/up_btn_bg" />
            <!--</LinearLayout>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <com.link.cloud.ui.RollListView
                    android:id="@+id/lessonmessageInfo"
                    android:layout_width="650px"
                    android:layout_height="400px"
                    android:layout_gravity="center"
                    android:scrollbars="none" />
            </LinearLayout>
            <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_weight="1">-->
            <Button
                android:id="@+id/next_lesson"
                android:layout_width="90px"
                android:layout_height="160px"
                android:layout_gravity="center_vertical"
                android:background="@drawable/next_btn_bge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/lesson_bt_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:background="@drawable/ensure_btn"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="40dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/selectLesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/lesson_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50px"
            android:gravity="center_horizontal"
            android:text="上课成功"
            android:textColor="@color/white"
            android:textSize="40dp" />
    </LinearLayout>
</LinearLayout>